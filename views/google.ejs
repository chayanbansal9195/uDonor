<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="initial-scale=1.0, user-scalable=no" />
    <meta charset="utf-8" />
    <title>Waypoints in Directions</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
      integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
      crossorigin="anonymous"
    />

    <style>
      button {
        background: none;
        border: none;
        background: #1167b1;
        margin: 2px;
        border-radius: 500px;
        color: white;
      }

      #right-panel {
        font-family: "Roboto", "sans-serif";
        line-height: 30px;
        padding-left: 10px;
      }

      #right-panel select,
      #right-panel input {
        font-size: 15px;
      }

      #right-panel select {
        width: 100%;
      }

      #right-panel i {
        font-size: 12px;
      }
      html,
      body {
        height: 100%;
        margin: 0;
        padding: 100px;
        background-color: #f8f8f8;
      }
      #map {
        height: 100%;
        float: left;
        width: 60%;
        height: 120%;
        margin-top: -5%;
      }
      #right-panel {
        margin: 70px;
        border-width: 2px;
        width: 20%;
        height: 400px;
        float: left;
        text-align: left;
        padding-top: 0;
      }
      #directions-panel {
        margin-top: 10px;
        background-color: lightgrey;
        color: black;
        padding: 10px;
        overflow: hidden;
        height: 250px;
        width: 300px;
      }
    </style>
  </head>
  <body>
    <div id="map"></div>
    <div id="right-panel">
      <div style="margin-top:-85%; width: 20vw">
        
        
        <select style="display:none" id="start">
          <option value="Perungudi">Current Location</option>
        </select>
        <br />
        <b style = "font-size: 25px; margin-bottom: 5px;">Which NGO would you like to donate to ?</b><br>
        <select id="end" style="float:left ;margin-top:10px; margin-bottom:10px">
          <option
            value="16/18, Nainiyappan Street Jeth Nagar, 1st Main Road Mandeveli, Chennai, Tamil Nadu 600028, 632014"
            >Teach for India</option
          >
          <option
            value="No:4, 2nd Cross Street, Ganga Nagar,Kodambakkam, Chennai-600024"
            >Maithree</option
          >
          <option
            value="No. 20/1, Loaders Gate, Flowers Road III, Main Lane, Purasaiwakkam, Chennai- 600084, Tamil Nadu"
            >Rainbow Homes</option
          >
          <option value="Los Angeles, CA">Blue Cross of India</option>
        </select><input
          type="submit"
          id="submit"
          style="background: none; border: none;
                 background: #1167b1; margin: 2px; border-radius: 500px; color: white;
                 font-size:20px;"
        />
      </div>
      <div id="directions-panel"></div>
      <br />
      
      <a href="http://localhost:3000/process" style = " font-size:20px;"
        ><button>Want a volunteer?</button></a
      >
    </div>

    <script>
      function initMap() {
        var directionsService = new google.maps.DirectionsService();
        var directionsDisplay = new google.maps.DirectionsRenderer();
        var map = new google.maps.Map(document.getElementById("map"), {
          zoom: 15,
          center: { lat: 41.85, lng: -87.65 }
        });
        directionsDisplay.setMap(map);

        document.getElementById("submit").addEventListener("click", function() {
          calculateAndDisplayRoute(directionsService, directionsDisplay);
        });
      }

      function calculateAndDisplayRoute(directionsService, directionsDisplay) {
        var waypts = [];

        directionsService.route(
          {
            origin: document.getElementById("start").value,
            destination: document.getElementById("end").value,
            waypoints: waypts,
            optimizeWaypoints: true,
            travelMode: "DRIVING"
          },
          function(response, status) {
            if (status === "OK") {
              directionsDisplay.setDirections(response);
              var route = response.routes[0];
              var summaryPanel = document.getElementById("directions-panel");
              summaryPanel.innerHTML = "";
              // For each route, display summary information.
              for (var i = 0; i < route.legs.length; i++) {
                var routeSegment = i + 1;
                summaryPanel.innerHTML +=
                  "<b>Route Segment: " + routeSegment + "</b><br>";
                summaryPanel.innerHTML += route.legs[i].start_address + " to ";
                summaryPanel.innerHTML += route.legs[i].end_address + "<br>";
                summaryPanel.innerHTML +=
                  route.legs[i].distance.text + "<br><br>";
              }
            } else {
              window.alert("Directions request failed due to " + status);
            }
          }
        );
      }
    </script>
    <script
      async
      defer
      src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCyTwfNKxjsZzLDNrSBt26-_Z7X8v-_aGM&callback=initMap"
    ></script>
  </body>
</html>
