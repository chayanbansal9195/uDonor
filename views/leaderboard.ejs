                    <div class="row">
                            <div class="col" style="background:#1167b1">
                            
                            </div>
                      <div class="col-7" >
                          
                            <table class="table" >
                                    <thead class="thead-dark">
                                      <tr>
                                        <th scope="col">Rank</th>
                                        <th scope="col">Name</th>
                                        <th scope="col-">Donation Made</th>
                                      </tr>
                                    </thead>
                                    
                            <%data.forEach((data,index)=>{%>
                               
                                    <tbody>
                                      <tr>
                                        <td><%=index+1%></td>
                                        <td><%=data.name%></td>
                                        <td><%=data.donation%></td>
                                      </tr>
                                      
                                    </tbody>
                
                            <%});%>
                            </table> </div>
                            <div class="col" ></div>
                     
                      
                    </div>
                </div>
                       
                          
                          
                      
            
            
      
        
